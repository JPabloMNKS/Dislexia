<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".JuegoSilabasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_2"
        android:layout_marginBottom="@dimen/margin_bottom">

        <TextView
            style="@style/text_view_style"
            android:id="@+id/puntaje_txt"
            android:layout_alignParentStart="true"
            android:text="@string/puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/text_view_style"
            android:text="0"
            android:id="@+id/txt_puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/text_view_style"
            android:text="0"
            android:id="@+id/txt_numero_pregunta"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_pregunta"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="@dimen/img_with"
        android:layout_height="@dimen/tam_img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/button_style"
                android:id="@+id/btn_opcion1"
                android:layout_width="@dimen/btn_with_2"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_style"
                android:id="@+id/btn_opcion2"
                android:layout_width="@dimen/btn_with_2"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_style"
                android:id="@+id/btn_opcion3"
                android:layout_width="@dimen/btn_with_2"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>