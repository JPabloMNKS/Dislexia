<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroound_about"
    tools:context=".AboutActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/backgroound_about_dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height">

        <ImageView
            android:layout_marginTop="@dimen/margin_top2"
            android:layout_gravity="center"
            android:src="@drawable/student_1"
            android:layout_width="@dimen/tam_img"
            android:layout_height="@dimen/tam_img" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/text_view_style"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_rigth"
                android:text="@string/acerca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/text_view_style"
                android:layout_marginTop="@dimen/margin_top1"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_rigth"
                android:text="@string/creador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/text_view_style"
                android:layout_marginTop="@dimen/margin_top1"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_rigth"
                android:text="@string/datos_correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/text_view_style"
                android:layout_marginTop="@dimen/margin_top1"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_rigth"
                android:text="@string/datos_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>