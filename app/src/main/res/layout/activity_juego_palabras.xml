<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JuegoPalabras">

    <RelativeLayout
        android:padding="@dimen/padding_2"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_view_style"
            android:layout_alignParentStart="true"
            android:text="@string/puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/text_view_style"
            android:text="0"
            android:id="@+id/txt_puntaje_palabras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/text_view_style"
            android:id="@+id/txt_numero_pregunta_palabra"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_palabra"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="@dimen/img_with"
        android:layout_height="@dimen/tam_img_2" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/button_style"
            android:id="@+id/btn_palabras_derecha"
            android:layout_width="@dimen/btn_with_2"
            android:layout_height="wrap_content" />

        <Button
            style="@style/button_style"
            android:id="@+id/btn_palabras_izquierda"
            android:layout_width="@dimen/btn_with_2"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>